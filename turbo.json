{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "IS_PREVIEW", "FUEL_PROVIDER_URL", "GRAPHQL_API"],
  "pipeline": {
    "//#build:libs": {
      "cache": true
    },
    "build": {
      "outputs": ["dist/**", "build/**", ".next/**"],
      "dependsOn": ["//#build:libs", "^build"],
      "cache": true
    },
    "build:preview": {
      "outputs": ["dist/**", "build/**", ".next/**"],
      "dependsOn": ["//#build:libs", "^build"],
      "cache": true
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["//#build:libs", "^build"],
      "cache": true
    },
    "test": {
      "outputs": ["**/**/report.json", "coverage/**"],
      "dependsOn": [],
      "outputMode": "full"
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "start": {
      "cache": false
    }
  }
}
