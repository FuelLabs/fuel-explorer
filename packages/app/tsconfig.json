{
  "extends": "@fuels/ts-config/base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "noEmit": true,
    "lib": ["dom"],
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["./src/*", "../ui/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".storybook",
    ".next/types/**/*.ts",
    "stories/**/*.tsx",
    "./jest.setup.ts",
    "./jest.config.ts",
    "./tailwind.config.js"
  ],
  "exclude": ["node_modules"]
}
