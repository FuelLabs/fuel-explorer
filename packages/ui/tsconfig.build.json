{
  "extends": "@fuels/ts-config/base.json",
  "compilerOptions": {
    "keyofStringsOnly": false,
    "lib": ["ES2022", "dom"],
    "target": "ES2021",
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": [
    "./src/**/*.stories.tsx",
    "./src/**/*.test.tsx",
    "../../node_modules",
    "node_modules",
    "dist",
    "coverage",
    "storybook-static"
  ]
}
